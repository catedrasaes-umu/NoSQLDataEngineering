morphia.map(User.class);
datastore.ensureIndexes();  


  @Property
  @NotNull(message = "age can't be null")
  @Indexed(options = @IndexOptions(expireAfterSeconds = 333))
  private Integer age;
  public Integer getAge() {return this.age;}
  public void setAge(Integer age) {this.age = age;}

  @Indexed(options = @IndexOptions(unique = true, expireAfterSeconds = 333, dropDups = true))

  @Indexed( value=IndexDirection.ASC )

  @Indexed( background=true)

  @Indexed(sparse=true)

@Indexes({
  @Index(fields = @Field(value = "age", type = DESC)),
  @Index(fields = @Field(value = "isEmployed"), options = @IndexOptions(name = "indexing_test"))
})